<% content_for(:title, 'Sign In') %>
<div id="session_form">
  <h2>Sign In</h2>
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="module">
        <hr/>
        <%= simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
          <%= f.error_notification %>
          <div class="module-content sign_in">
            <%= f.input :email, :required => true %>
            <%= f.input :password, :required => true %>
          </div>
          <%= f.button :submit, "Sign in", :class => 'btn btn-primary btn-green', :id => 'sign_in' %>
          <div class="links">
            <p>
              <%= link_to "I forgot my password", new_password_path(resource_name) %>
            </p>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
